<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="115dp"
            android:text="New Request"
            android:background="@drawable/new_request"
            android:textSize="20dp"
            android:id="@+id/button_request"
            android:textColor="#ffffff"
            android:onClick="OnButtonClick"
            android:layout_weight="0.04"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <Button
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:text="Request History"
        android:id="@+id/button_hist"
            android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/history"
        android:onClick="OnButtonClick"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_request"
        android:layout_above="@+id/button_change_password"
            android:layout_weight="0.15" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:id="@+id/button_view_announcements"
            android:background="@drawable/announcements_tenant"
            android:text="ANNOUNCEMENTS"
            android:textColor="#ffffff"
            android:onClick="OnButtonClick"
            android:textSize="20dp"
            android:layout_weight="0.05" />

        <Button
        android:layout_height="88dp"
        android:layout_width="fill_parent"
        android:text="Change Password"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/password"
        android:id="@+id/button_change_password"
            android:onClick="OnButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/display_user"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.08" />
    </LinearLayout>
</RelativeLayout>
